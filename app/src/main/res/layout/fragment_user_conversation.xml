
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.UserProfile.UserConversationFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerConversation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editConversation" />


    <EditText
        android:id="@+id/editConversation"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:hint="@string/text_new_comment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSendConversation"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnSendConversation"
        android:layout_width="60dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:tint="?attr/colorPrimary"
        android:text="Send"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_send" />
</androidx.constraintlayout.widget.ConstraintLayout>