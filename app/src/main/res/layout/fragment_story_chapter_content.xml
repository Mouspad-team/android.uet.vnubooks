<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.StoryInterface.StoryChapterContentFragment"
    android:orientation="vertical"
    android:id="@+id/drawerLayoutChapterContent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarChapterContent"
                app:title="@string/text_hint"
                android:titleTextColor="?attr/colorPrimary"
                android:background="@color/colorThemeWhite"
                android:elevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
            </androidx.appcompat.widget.Toolbar>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="8">
                <RelativeLayout
                    android:id="@+id/relativeLayoutTextAttrChapterContent"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:background="#EAE2E1">

                    <TextView
                        android:text="Setting Your Reading Mode"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:paddingTop="20dp"
                        android:gravity="center"
                        />
                    <RelativeLayout
                        android:id="@+id/relativeLayoutTextSizeChapterContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                        <Button
                            android:id="@+id/btnTextSizeDecreaseChapterContent"
                            android:text="A-"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:id="@+id/btnTextSizeIncreaseChapterContent"
                            android:text="A+"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/btnTextSizeDecreaseChapterContent"/>
                    </RelativeLayout>
                    <ImageButton
                        android:id="@+id/btnBackgroundWhiteChapterContent"
                        android:background="@color/colorThemeWhite"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/relativeLayoutTextSizeChapterContent"
                        android:layout_toLeftOf="@id/btnBackgroundBlackChapterContent"
                        android:layout_marginRight="5dp"/>
                    <ImageButton
                        android:id="@+id/btnBackgroundBlackChapterContent"
                        android:background="@color/colorThemeBlack"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/relativeLayoutTextSizeChapterContent"
                        android:layout_centerInParent="true" />
                    <ImageButton
                        android:id="@+id/btnBackgroundAccentChapterContent"
                        android:background="?attr/colorAccent"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/relativeLayoutTextSizeChapterContent"
                        android:layout_toRightOf="@id/btnBackgroundBlackChapterContent"
                        android:layout_marginLeft="5dp"/>
                </RelativeLayout>
                <ScrollView
                    android:id="@+id/scrollViewReadingChapterContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linearLayoutReadingChapterContent"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <include layout="@layout/item_add_media"/>

                        <TextView
                            android:id="@+id/txtTitleChapterContent"
                            android:text="@string/hello_blank_fragment"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:paddingBottom="5dp"
                            android:background="@drawable/transparent_total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            />

                        <View
                            android:layout_below="@id/cardViewItemWriteStudio"
                            android:layout_width="350dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/border_bottom"/>

                        <com.chinalwb.are.render.AreTextView
                            android:visibility="gone"
                            android:id="@+id/areTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"/>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/txtChapterContent"
                            android:text="@string/hello_blank_fragment"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/navigationChapterContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="?android:attr/windowBackground"
                android:foreground="?attr/selectableItemBackground"
                app:itemBackground="@color/white"
                app:itemIconTint="@color/bottom_navigation_item_color"
                app:itemTextColor="?attr/colorPrimary"
                app:menu="@menu/bottom_menu_story_chapter_content" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>